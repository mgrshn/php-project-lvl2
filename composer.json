{
    "name": "hexlet/code",
    "description": "This is Hexlet's second educational project. Task: write an application that can compare two files and find differences between them. The files can be in json or yaml formats.",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Hexlet\\Code\\": "src/"
        },
        "files": [
            "src/Differ.php",
            "src/Parser.php",
            "src/Builder.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Stylish.php",
            "src/Formatters.php"
        ]
    },
    "authors": [
        {
            "name": "Grishin",
            "email": "grishinma2009@yandex.ru"
        }
    ],
    "require": {
        "docopt/docopt": "^1.0",
        "symfony/yaml": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    }
}
